---
import { Icon } from "astro-icon/components";

export interface Props {
    headingStyle: string;
}

const { headingStyle } = Astro.props;
---

<section class="mt-24 flex-initial text-2xl xl:mt-0 xl:max-w-sm">
    <h1 id="about-me" class:list={[headingStyle, "mb-4 scroll-mt-16"]}>
        About me
    </h1>
    <div class="flex w-full flex-col items-stretch gap-6 leading-[1.15]">
        <div class="flex flex-row items-center gap-8">
            <div class="text-purdue flex-auto font-bold">
                <abbr
                    title="Computer Science"
                    class="cursor-default no-underline decoration-dotted hover:underline"
                    >CS</abbr
                >
                <span class="font-default-sans">@</span>
                Purdue
            </div>
            <div
                class="text-secondary flex-initial text-right text-lg font-medium"
            >
                2023&ndash;2027
            </div>
        </div>
        <div class="flex flex-row items-center gap-8">
            <div class="flex-auto font-bold">
                Linux Engineer intern
                <span class="sr-only">@</span>
                <span class="whitespace-nowrap"
                    ><Icon
                        name="janestreet"
                        class="mb-1 inline align-middle"
                        desc="Jane Street logo"
                    />&nbsp;Jane</span
                > Street
            </div>
            <div
                class="text-secondary flex-initial text-right text-lg font-medium"
            >
                Summer 2026
            </div>
        </div>
        <div class="flex flex-row items-center gap-8">
            <div class="flex-auto font-bold">
                <a href="#github-calendar" data-highlight>
                    Open source developer
                </a>
            </div>
            <div
                class="text-secondary flex-initial text-right text-lg font-medium"
            >
                In my free time
            </div>
        </div>
    </div>
</section>
